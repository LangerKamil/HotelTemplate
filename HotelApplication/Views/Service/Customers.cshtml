@model HotelApplication.ViewModels.CustomerServiceViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_ServiceNavBar")

<h2>Customers</h2>

<hr />
<button onclick="location.href='@Url.Action("NewForm", "Service")'" class="btn btn-primary">New Customer</button>
<hr />

<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>ACTIONS</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#customers").DataTable({
                ajax: {
                    url: "/api/Services/Customers",
                    dataSrc: "",
                },

                columns: [
                    {
                        data: "FirstName"
                    },

                    {
                        data: "LastName"
                    },

                {
                    data: "Id",
                    render: function (data, type, customer) {
                        var deleteBtn = "<a href='/Service/CustomerDetails/" + data + "' class='btn btn-primary' data-customer-id= >Edit</a>";
                        var editBtn = "<button class='btn btn-danger js-delete' data-customer-id=" + data + ">Delete</button>";
                        return deleteBtn + editBtn

                    }
                }

                ]
            });


            $("#customers").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/Services/Customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        })
                    }
                });
            });

            $("#customers").on("click", ".js-edit", function () {
                var button = $(this);
                bootbox.confirm("Do you want to edit this user?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/Services/Customers/" + button.attr("data-customer-id"),
                            method: "PUT",
                            success: function (result) {
                                console.log("Success!");
                            }
                        })
                    }
                })
            });
        })
    </script>
}