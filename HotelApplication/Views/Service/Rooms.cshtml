        function RenderTable(table) {
            var statusType = table==="#smRooms"?1:(table==="#mdRooms"?2:3)
            $(table).DataTable({
                ajax: {
                    url: "/api/Services/Rooms",
                    dataSrc: function (json) {
                        return json.filter(c=> c.RoomTypeId === statusType);
                        //return json.slice(0,20);
                    },
                },

                columns: [
                    {
                        data: "Id"
                    },
                    {
                        data: "RoomStatus",
                        render: function (data) {
                            return " " + data.Name;
                        }
                    },
                {
                    data: "Id",
                    render: function () {
                        return "<button class='btn btn-primary'>View Details</button>"
                    }
                }
                ]
            });
        }
