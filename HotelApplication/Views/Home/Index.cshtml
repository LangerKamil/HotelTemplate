    /* Sides of the gallery */
    .cnt-hdr-left {
        width: 32%;
        height: inherit;
        background-position: left;
        display: block;
        float: left;
    }

    .cnt-hdr-right {
        width: 32%;
        height: inherit;
        background-position: right;
        display: block;
        float: right;
    }

    /* Gallery sides shadows */
    .blur-left {
        position: relative;
        height: inherit;
        width: 100%;
        top: 0;
        left: 0;
        background: #56ccf2;
        background: -webkit-linear-gradient(to left, #555555, #f5f5f5);
        background: linear-gradient(to left, #555555, #f5f5f5);
        z-index: 1;
        opacity: 0.4;
    }

    .blur-right {
        position: relative;
        height: inherit;
        width: 100%;
        top: 0;
        left: 0;
        background: #56ccf2;
        background: -webkit-linear-gradient(to right, #555555, #f5f5f5);
        background: linear-gradient(to right, #555555, #f5f5f5);
        z-index: 1;
        opacity: 0.4;
    }

    /* Next & previous buttons */
    .prev, .next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        width: auto;
        padding: 16px;
        margin-top: -22px;
        color: white;
        font-weight: bold;
        font-size: 72px;
        transition: 0.6s ease;
        border-radius: 0 3px 3px 0;
        user-select: none;
    }

    /* Position the "prev button" to the right */
    .prev {
        position: absolute;
        top: 238px;
        right: 30px;
        border-radius: 3px 0 0 3px;
    }

    .next {
        position: absolute;
        top: 238px;
        left: 30px;
        border-radius: 3px 0 0 3px;
    }

        /* On hover, add a black color with a little bit see-through */
        .prev:hover, .next:hover {
            color: rgba(0,0,0,0.8);
        }

    .ml12 {
        position:relative;
        margin-left:auto;
        margin-top:-1px;
        padding-top:400px;
        text-align:center;
        font-weight: 200;
        font-size: 2.8em;
        color:white;
        text-shadow:inherit;
        text-transform: uppercase;
        letter-spacing: 0.5em;
    }

    .ml12 .letter {
        display: inline-block;
        line-height: 1em;
        }
</style>


