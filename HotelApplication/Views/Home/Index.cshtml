<style>

    /* Gallery container */
    .container-slideshow {
        margin: 0;
        width: 100%;
        height: 600px;
        background-image: url(../../Images/christian-lambert-hlOpCML8twI-unsplash.jpg);
        background-size: 1110px 100%;
        background-position: center;
        background-repeat: no-repeat;
    }

    /*.img1{
        width:1110px;
